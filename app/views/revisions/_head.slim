.page-subheading.gray.lighten-3.no-margin-bottom
  .container
    .row.no-margin-bottom
      .col.s12
        =<> button_to profile_project_revision_restores_path(project.owner, project, revision),
                      method: :post,
                      class: 'btn right primary-color primary-color-text',
                      style: 'display: inline-block;'
          | Restore
        p.flow-text.no-margin
          b = revision.title
        p.no-margin
          => link_to profile_path(revision.author)
            = revision.author.name
          | &middot;
          =<> time_ago_in_words(revision.created_at)
          | ago
